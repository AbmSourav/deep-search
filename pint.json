{
    "preset": "psr12",
    "rules": {
        "control_structure_braces": false,
        "new_with_parentheses": {
            "anonymous_class": true,
            "named_class": true
        },
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        }
    },
	"exclude": [
		"vendor/",
		"vendor-test/",
		"node_modules/"
	]
}
